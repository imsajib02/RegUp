<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlightgrayishblue"
    tools:context="bd.app.mypackage.regup.ChangeEmailActivity">

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout">
    </LinearLayout>


    <EditText
        android:id="@+id/newmail"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etPasswordLayout"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/etPasswordLayout"
        android:layout_marginTop="@dimen/_70sdp"
        android:hint="New Email"
        android:inputType="textEmailAddress" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/etPasswordLayout"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout"
        android:layout_below="@+id/newmail"
        android:layout_marginTop="@dimen/_20sdp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/pass"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="  Confirm Password"
            android:inputType="textPassword"
            android:maxLength="15" />

    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/change_mail"
        android:layout_width="@dimen/_220sdp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="Change Email"
        android:background="@drawable/mybutton"/>

</RelativeLayout>
