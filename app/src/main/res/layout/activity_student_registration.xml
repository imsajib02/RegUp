<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorlightgrayishblue"
    tools:context="bd.app.mypackage.regup.StudentRegistrationActivity">


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout2"
        android:layout_alignLeft="@+id/etPasswordLayout"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textInputLayout2"
        android:layout_alignStart="@+id/etPasswordLayout"
        android:layout_marginTop="@dimen/_15sdp"
        android:gravity="center"
        android:text="@string/per_info"
        android:textSize="@dimen/_16sdp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/textInputLayout2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mail"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_email_black"
            android:drawableStart="@drawable/ic_email_black"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Email"
            android:inputType="textEmailAddress" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout2"
        android:layout_alignLeft="@+id/textInputLayout2"
        android:layout_alignRight="@+id/textInputLayout2"
        android:layout_alignStart="@+id/textInputLayout2"
        android:layout_below="@+id/textInputLayout2"
        android:gravity="center"
        android:text="@string/email_nb"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/etPasswordLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        app:errorEnabled="true"
        app:counterEnabled="true"
        app:counterMaxLength="15"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/password"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_lock_black"
            android:drawablePadding="@dimen/_5sdp"
            android:drawableStart="@drawable/ic_lock_black"
            android:hint="Password"
            android:inputType="textPassword"
            android:maxLength="15" />

    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout3"
        android:layout_alignLeft="@+id/textInputLayout3"
        android:layout_alignRight="@+id/textInputLayout3"
        android:layout_alignStart="@+id/textInputLayout3"
        android:layout_below="@+id/etPasswordLayout"
        android:layout_marginTop="@dimen/_20sdp"
        android:text="Include phone number for Blood Vault" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/textInputLayout3">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/contact"
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_local_phone_black"
            android:drawableStart="@drawable/ic_local_phone_black"
            android:drawablePadding="@dimen/_5sdp"
            android:hint="Contact"
            android:inputType="phone" />

    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_blood"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignEnd="@+id/textInputLayout3"
        android:layout_alignLeft="@+id/textInputLayout3"
        android:layout_alignRight="@+id/textInputLayout3"
        android:layout_alignStart="@+id/textInputLayout3"
        android:layout_below="@+id/textInputLayout3"
        android:layout_marginTop="@dimen/_15sdp" />

    <Button
        android:id="@+id/signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/spinner_blood"
        android:layout_alignLeft="@+id/etPasswordLayout"
        android:layout_alignRight="@+id/spinner_blood"
        android:layout_alignStart="@+id/etPasswordLayout"
        android:layout_below="@+id/spinner_blood"
        android:layout_marginTop="@dimen/_25sdp"
        android:background="@drawable/mybutton"
        android:text="Signup" />


</RelativeLayout>
