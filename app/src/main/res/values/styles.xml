<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationDrawerSmall">
        <item name="android:textSize">12sp</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">35dp</item>
        <item name="listPreferredItemHeightSmall">35dp</item>

        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">20dp</item>
        <item name="listPreferredItemPaddingLeft">20dp</item>
    </style>

    <style name="NavigationDrawerXlarge">
        <item name="android:textSize">33sp</item>

        <!-- item size in menu-->
        <item name="android:listPreferredItemHeightSmall">80dp</item>
        <item name="listPreferredItemHeightSmall">80dp</item>


        <!-- item padding left in menu-->
        <item name="android:listPreferredItemPaddingLeft">30dp</item>
        <item name="listPreferredItemPaddingLeft">30dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
